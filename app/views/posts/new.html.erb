<h1>Create new post</h1>
<div class="post new">
	<h2>Create new post</h2>
	<div class="back-link"><%= link_to("<< Back to posts listing", :action => "list")%>
	
	<%= form_for(:post, :url => {:action => "create"}) do |f| %>
	<%= error_messages_for(@post) %>
	<table summary="post form fields">
	  <tr>
	    <th><%= f.label(:content) %></th>
	    <td><%= f.text_area(:content, :size => "40x10") %></td>
	  </tr>
	  <tr>
	    <th><%= f.label(:user_id) %></th>
	    <td><%= f.select(:user_id, @all_user_ids) %></td>
	  </tr>
	 
	  
	</table>
	
	<div class="form-buttons">
      <%= submit_tag('Create post') %>
    </div>
 <% end %>


	
</div>
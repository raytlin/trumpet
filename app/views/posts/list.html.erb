<% @page_title = "Posts List" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'menu'}, :class => 'back-link') %>

<div class="post list">
  <h2>Posts</h2>

  <%= link_to('Add New Post', {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@posts.size, 'post') %> found</div>
  
  <table class="listing" summary="Admin users list">
    <tr>
      <th>Username</th>
      <th>Content</th>
      <th>user_id</th>
	  <th>poster name</th>
	  <th>Created At</th>
      
    </tr>
    <% @posts.each do |post| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= post.user.username %></td>
      <td><%= post.content %></td>
      <td><%= post.user_id %></td>
	  <td><%= post.poster_name %></td>
	  <td><%= post.created_at %></td>
	
      <td class="actions">
        <%= link_to('Edit', {:action => 'edit', :id => post.id}, :class => 'action edit') %>
        <%= link_to('Delete', {:action => 'delete', :id => post.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
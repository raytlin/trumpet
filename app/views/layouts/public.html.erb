<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Trumpet Community <%= "| #{@page_title}" if @page_title %></title>
    <meta name="author" content="Frat Party">
    <%= stylesheet_link_tag('public') %>
  </head>

  <div id="footer2">
	<% if session[:user_id] != nil %>
		Welcome back! VALUED customer: <%= session[:name]%> | <%= link_to('Logout', :controller => 'public', :action => 'logout')%>
		<% else %>
		NOT yet a User? <%= link_to('Sign Up!', :controller => 'public', :action => 'signup')%> | <%= link_to('Sign In', :controller => 'public', :action => 'login')%>
	<% end %>
  </div>

	<body>
    <div id="header">
      <h1>Trumpet Site</h1>
    </div>
<div id="middle">
	<%= link_to("HOME", "/")%> | <%= link_to("PROFILE", :controller => 'public', :action => 'profile', :id => session[:user_id])%> | <%= link_to("ALL USERS", :controller => 'public', :action => 'user')%> | <%= link_to("ORDER NOW!", :controller => 'store', :action => 'order')%>
</div>
    <div id="main">
      	<% if !flash[:notice].blank? %>
	      <div class="notice">
	        <%= flash[:notice] %>
	      </div>
	      <% end %>
      <div id="content">
        <%= yield %>
      </div>
      <div class="clear"></div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; </p>
    </div>
  </body>
</html>